<%= render partial: "header" %>  
<% @page_title = "ユーザ情報" %>

<h1><%= @page_title %></h1>

<div><%= link_to "編集",[:edit, @user], {class: "btn btn-success"} %></div>

<table class="table table-striped">
  <tr>
    <th>ユーザー名</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>本名</th>
    <td><%= @user.full_name %></td>
  </tr>  
  <tr>
    <th>性別</th>
    <td><%= @user.sex==1 ? "男":"女" %></td>
  </tr>  
  <tr>
    <th>誕生日</th>
    <td><%= @user.birthday&.strftime("%Y年%m月%d日")%></td>
  </tr>  
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>  
  <tr>
    <th>管理者権限</th>
    <td><%= @user.administrator? ? "〇":"-" %></td>
  </tr>
  <tr>
    <th>パスワード</th>
    <td><%= @user.password %></td>
  </tr>
</table>