<%= render partial: "header" %>  


<div><%= link_to "新規登録", new_user_path,{class: "btn btn-primary"} %></div>

<% if @users.present? %>
  <table  class="table table-striped">
    <tr>
      <th>ユーザー名</th>
      <th>本名</th>
      <th>操作</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name,user %></td>
      <td><%= user.full_name %></td>
      <td>
        <%= link_to "編集",[:edit, user], {class: "btn btn-success"} %>
        <%= link_to "削除",user, {method: :delete,
            data:{confirm: "本当に削除しますか？"} , class: "btn btn-danger" } %>
      </td>
    </tr>
    <% end %>
  </table>
<% else %>
  <p>会員情報がありません。</p>
<% end %>
