<div class="row">
<div class="col-8" style="background-color:#465568;">
  <%= form_with model: @category, local: true do |f| %>
  <div class=" form-group " >
  <label class="text-light">カテゴリ名</label>
  <%= f.text_field :name, class:"form-control" %>
  </div>
  <%= link_to "戻る", categories_path, class:"btn btn-secondary" %>
  <%= f.submit "作成", class:"btn btn-primary" %>
  <% end %> 
  <%= render partial:"shared/errors", locals:{obj:@category} %>
</div>
<div class="col-4 bg-dark" style="padding:0px; ">
  <%= render'shared/sidebar' %>
</div>